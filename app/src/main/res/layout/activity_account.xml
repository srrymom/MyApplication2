<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="141dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="142dp"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="127dp"
            android:layout_height="19dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:text="Имя Фамилия"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Button
            android:id="@+id/createButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="12dp"
            android:text="Создать объявление" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:text="Мои объявления"
            android:textSize="18sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomMenu"
        android:layout_width="409dp"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/vectorsearch"
            android:fontFamily="@font/montserrat_regular"
            android:lines="1"
            android:linksClickable="false"
            android:outlineProvider="none"
            android:padding="0dp"
            android:text="Поиск"
            android:textAlignment="center"
            android:textColor="@color/lightDark"
            android:textSize="12dp" />

        <Button
            android:id="@+id/heartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/vectorheart"
            android:fontFamily="@font/montserrat_regular"
            android:padding="0dp"
            android:text="Избранное"
            android:textAlignment="center"
            android:textColor="@color/lightDark"
            android:textSize="12dp" />

        <Button
            android:id="@+id/newButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:capitalize="words"
            android:drawableTop="@drawable/vectornew"
            android:fontFamily="@font/montserrat_regular"
            android:padding="0dp"
            android:text="Разместить"
            android:textAlignment="center"
            android:textColor="@color/lightDark"
            android:textSize="12dp" />

        <Button
            android:id="@+id/mesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:capitalize="words"
            android:drawableTop="@drawable/vectormes"
            android:fontFamily="@font/montserrat_regular"
            android:padding="0dp"
            android:text="Сообщения"
            android:textAlignment="center"
            android:textColor="@color/lightDark"
            android:textSize="12dp" />

        <Button
            android:id="@+id/accButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:capitalize="words"
            android:drawableTop="@drawable/vectoracc"
            android:fontFamily="@font/montserrat_regular"
            android:padding="0dp"
            android:text="Аккаунт"
            android:textAlignment="center"
            android:textColor="@color/lightDark"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/upperPanel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:src="@drawable/left_arrow"
            android:tint="@color/lightDark"
            android:background="@color/white"
            android:text="Button" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="20"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical"
            android:textAlignment="textStart"
            android:textColor="@color/lightDark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>